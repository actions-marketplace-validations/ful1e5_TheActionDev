{
  "name": "the-action-dev",
  "version": "0.0.0",
  "description": "dev.to Posts with GitHub Actions üßë‚Äçüíª",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ful1e5/TheActionDev.git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "run:action": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "clean": "rm -rf dist package-lock.json",
    "npm-lock": "synp -f -s yarn.lock",
    "release": "yarn clean && yarn && yarn rebuild && yarn npm-lock && mv -f package-lock.json npm.lock && rm -rf node_modules && yarn --prod && mv npm.lock package-lock.json"
  },
  "keywords": [
    "dev.to",
    "GitHub",
    "forem",
    "actions",
    "node"
  ],
  "author": "Kaiz Khatri",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@typescript-eslint/parser": "^4.0.1",
    "@vercel/ncc": "^0.24.0",
    "eslint": "^7.8.1",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.0.0",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "js-yaml": "^3.14.0",
    "prettier": "^2.1.1",
    "synp": "^1.8.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@actions/core": "^1.2.5"
  }
}
