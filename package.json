{
  "name": "the-action-dev",
  "version": "0.0.0",
  "description": "dev.to Posts with GitHub Actions 🧑‍💻",
  "author": "Kaiz Khatri",
  "main": "lib/main.js",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ful1e5/TheActionDev.git"
  },
  "keywords": [
    "dev.to",
    "GitHub",
    "forem",
    "actions",
    "node"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "npm-lock": "synp -f -s yarn.lock",
    "pack:dev": "rm -rf lib dist && yarn build && yarn package",
    "run:dev": "act -s DEV_TO_TOKEN=S3cret1T0k3n -j test",
    "action:yarn": "yarn build && yarn format && yarn lint && yarn package && yarn test",
    "action": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "dependencies": {
    "@actions/core": "^1.2.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@typescript-eslint/parser": "^4.0.1",
    "@vercel/ncc": "^0.24.0",
    "eslint": "^7.8.1",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.0.0",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "js-yaml": "^3.14.0",
    "prettier": "^2.1.1",
    "synp": "^1.8.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
}
